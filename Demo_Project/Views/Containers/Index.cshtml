@model IEnumerable<Demo_Project.Models.Container>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContainerNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginPort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationPort)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContainerNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginPort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationPort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContainerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContainerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContainerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
